<Window x:Class="Lecture28.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture28"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <!-- we can align the items on the edges with dockpanel  -->
    
    <!-- -->
    <DockPanel >
        <Label DockPanel.Dock="Top" Content="-- Header --" 
           Background="#FFDC7B7B" 
           FontSize="20" 
           HorizontalContentAlignment="Center"
           Padding="10"/>

        <!-- Navbar -->
        <Menu DockPanel.Dock="Top" Background="#FFD884D1" 
              FontSize="20" 
              HorizontalContentAlignment="Center" 
              Padding="10">
            <MenuItem Header="File">
                <MenuItem Header="New" Click="MenuItem_Click"/>
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Cut"/>
                <MenuItem Header="Copy"/>
                <MenuItem Header="Paste"/>
            </MenuItem>
            <MenuItem Header="View"/>

        </Menu>

        <Label DockPanel.Dock="Bottom" Content="-- Footer --" 
            Background="#FF7BD5DC" 
            FontSize="20" 
            HorizontalContentAlignment="Center" 
            Padding="10"/>

        <Label DockPanel.Dock="Left" Content="--Left Side--" 
            Background="#FFDBDC7B" 
            FontSize="20" 
            HorizontalContentAlignment="Center" 
            Padding="10"/>

        <Label DockPanel.Dock="Right" Content="--Right Side--" 
            Background="#FF81E682" 
            FontSize="20" 
            HorizontalContentAlignment="Center" 
            Padding="10"/>

        <Label Content="--Right Side--" 
            Background="#FFA0D08F" 
            FontSize="20" 
            HorizontalContentAlignment="Center" 
            Padding="10"/>


    </DockPanel>

</Window>
