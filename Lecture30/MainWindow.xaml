<Window x:Class="Lecture30.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture30"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox FontSize="50" Name="txtSource" />
        <WrapPanel>     <!-- Wrappanel adds the objects in one line as long as there is space -->
            <TextBlock FontSize="50" Text="Value" />
            <Button Content="Button 😁" Margin="100,15,0,15" Background="#FFE5F170"></Button>
            <Button Content="Button 😁" Margin="100,15,0,15" Background="#FFAFF170"></Button>

        </WrapPanel>
            
        <!-- DataBinding through Xaml -->
        <!-- <TextBox Text="{Binding UpdateSourceTrigger=PropertyChanged, 
            ElementName=txtSource, 
            Path=Text, 
            Mode=TwoWay}" 
                 FontSize="50" Name="txtTarget" />  -->   

        <!-- DataBinding through Code Behind -->
        <TextBox FontSize="50" Name="txtTarget" />

    </StackPanel>
</Window>
