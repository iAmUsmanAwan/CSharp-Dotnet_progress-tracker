@model List< Lecture50.Models.Student>
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Welcome to the List of Students Page</h2>

<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Age</th>
			<th>CGPA</th>
			<th>Semester</th>
			<th></th>
		</tr>
	</thead>
	@foreach (Lecture50.Models.Student student in Model)
	{
		<tbody>
			<tr>
				<td>		@student.Name		</td>
				<td>		@student.Age		</td>
				<td>		@student.CGPA		</td>
				<td>		@student.Semester	</td>

				<td>
					<a class="btn btn-info" asp-action="Details" asp-route-id="@student.Id">Details</a>
					<a class="btn btn-warning" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
					<a class="btn btn-danger" asp-action="Remove" asp-route-id="@student.Id">Remove</a>
				</td>

			</tr>
		</tbody>
	}
</table>