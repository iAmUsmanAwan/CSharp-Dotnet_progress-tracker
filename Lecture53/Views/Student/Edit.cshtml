@model Lecture50.Models.Student
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-action="Edit">

	<div asp-validation-summary="ModelOnly"></div>

	<label class="form-label" asp-for="Id"></label><br>
	<input class="form-control" asp-for="Id" readonly ><br>


	<label class="form-label" asp-for="Name"></label><br>
	<input class="form-control" asp-for="Name"><br>


	<label class="form-label" asp-for="Age"></label><br>
	<input class="form-control" asp-for="Age"><br>
	<span asp-validation-for="Age"></span><br> <br>


	<label class="form-label" asp-for="CGPA"></label><br>
	<input class="form-control" asp-for="CGPA"><br>
	<span asp-validation-for="CGPA"></span><br> <br>



	<label class="form-label" asp-for="Semester"></label><br>
	<input class="form-control" asp-for="Semester"><br>
	<span asp-validation-for="Semester"></span><br> <br>

	<input class="btn btn-dark" type="submit" value="Save Student">

</form>
